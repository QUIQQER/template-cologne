<?xml version="1.0" encoding="UTF-8"?>
<quiqqer>
    <bricks>

        <!-- generall settings for all bricks -->
        <brick control="*">
            <settings>
                <setting name="general.fullWidth" type="checkbox">
                    <locale group="quiqqer/template-cologne"
                            var="brick.general.fullWidth"/>
                </setting>
                <setting name="general.noSpacing" type="checkbox">
                    <locale group="quiqqer/template-cologne"
                            var="brick.general.noSpacing"/>
                </setting>
                <setting name="general.stopCollapsingMargins" type="checkbox">
                    <locale group="quiqqer/template-cologne"
                            var="brick.general.stopCollapsingMargins"/>
                </setting>
                <setting name="general.brickWrapperBackground" class="media-color" type="text">
                    <locale group="quiqqer/template-cologne"
                            var="brick.general.wrapperBackground"/>
                </setting>
            </settings>
        </brick>

        <!-- defined areas in the template -->
        <templateAreas>

            <!-- global areas -->
            <areas>

                <!-- product sidebar prefix-->
                <area name="productSidebarPrefix" site-type="products/category"
                      inheritance="1" priority="1">
                    <title>
                        <locale group="quiqqer/template-cologne"
                                var="area.productSidebarPrefix.title"
                        />
                    </title>
                    <description>
                        <locale group="quiqqer/template-cologne"
                                var="area.productSidebarPrefix.description"
                        />
                    </description>
                </area>

                <!-- product sidebar suffix-->
                <area name="productSidebarSuffix" site-type="products/category"
                      inheritance="1" priority="1">
                    <title>
                        <locale group="quiqqer/template-cologne"
                                var="area.productSidebarSuffix.title"
                        />
                    </title>
                    <description>
                        <locale group="quiqqer/template-cologne"
                                var="area.productSidebarSuffix.description"
                        />
                    </description>
                </area>

                <area name="headerSuffix" inheritance="1" priority="1">
                    <title>
                        <locale group="quiqqer/template-cologne"
                                var="area.headerSuffix.title"
                        />
                    </title>
                    <description>
                        <locale group="quiqqer/template-cologne"
                                var="area.headerSuffix.description"
                        />
                    </description>
                </area>

                <area name="footerPrefix" inheritance="1" priority="6">
                    <title>
                        <locale group="quiqqer/template-cologne"
                                var="area.footerPrefix.title"
                        />
                    </title>
                    <description>
                        <locale group="quiqqer/template-cologne"
                                var="area.footerPrefix.description"
                        />
                    </description>
                </area>

                <area name="footer" inheritance="1" priority="6">
                    <title>
                        <locale group="quiqqer/template-cologne"
                                var="area.footer.title"
                        />
                    </title>
                    <description>
                        <locale group="quiqqer/template-cologne"
                                var="area.footer.description"
                        />
                    </description>
                </area>
            </areas>

            <!-- specific type areas -->
            <layouts>

                <layout layout="layout/startPage">
                    <area name="contentPrefix" inheritance="1" priority="3">
                        <title>
                            <locale group="quiqqer/template-cologne"
                                    var="area.contentPrefix.title"
                            />
                        </title>
                        <description>
                            <locale group="quiqqer/template-cologne"
                                    var="area.contentPrefix.description"
                            />
                        </description>
                    </area>

                    <area name="contentSuffix" inheritance="1" priority="4">
                        <title>
                            <locale group="quiqqer/template-cologne"
                                    var="area.contentSuffix.title"
                            />
                        </title>
                        <description>
                            <locale group="quiqqer/template-cologne"
                                    var="area.contentSuffix.description"
                            />
                        </description>
                    </area>
                </layout>

                <layout layout="layout/noSidebar">
                    <area name="contentPrefix" inheritance="1" priority="3">
                        <title>
                            <locale group="quiqqer/template-cologne"
                                    var="area.contentPrefix.title"
                            />
                        </title>
                        <description>
                            <locale group="quiqqer/template-cologne"
                                    var="area.contentPrefix.description"
                            />
                        </description>
                    </area>

                    <area name="contentSuffix" inheritance="1" priority="4">
                        <title>
                            <locale group="quiqqer/template-cologne"
                                    var="area.contentSuffix.title"
                            />
                        </title>
                        <description>
                            <locale group="quiqqer/template-cologne"
                                    var="area.contentSuffix.description"
                            />
                        </description>
                    </area>
                </layout>

                <layout layout="layout/leftSidebar">
                    <area name="leftSidebar" inheritance="1" priority="3">
                        <title>
                            <locale group="quiqqer/template-cologne"
                                    var="area.leftSidebar.title"
                            />
                        </title>
                        <description>
                            <locale group="quiqqer/template-cologne"
                                    var="area.leftSidebar.description"
                            />
                        </description>
                    </area>

                    <area name="contentPrefix" inheritance="1" priority="3">
                        <title>
                            <locale group="quiqqer/template-cologne"
                                    var="area.contentPrefix.title"
                            />
                        </title>
                        <description>
                            <locale group="quiqqer/template-cologne"
                                    var="area.contentPrefix.description"
                            />
                        </description>
                    </area>

                    <area name="contentSuffix" inheritance="1" priority="4">
                        <title>
                            <locale group="quiqqer/template-cologne"
                                    var="area.contentSuffix.title"
                            />
                        </title>
                        <description>
                            <locale group="quiqqer/template-cologne"
                                    var="area.contentSuffix.description"
                            />
                        </description>
                    </area>
                </layout>

                <layout layout="layout/rightSidebar">
                    <area name="rightSidebar" inheritance="1" priority="3">
                        <title>
                            <locale group="quiqqer/template-cologne"
                                    var="area.rightSidebar.title"
                            />
                        </title>
                        <description>
                            <locale group="quiqqer/template-cologne"
                                    var="area.rightSidebar.description"
                            />
                        </description>
                    </area>

                    <area name="contentPrefix" inheritance="1" priority="3">
                        <title>
                            <locale group="quiqqer/template-cologne"
                                    var="area.contentPrefix.title"
                            />
                        </title>
                        <description>
                            <locale group="quiqqer/template-cologne"
                                    var="area.contentPrefix.description"
                            />
                        </description>
                    </area>

                    <area name="contentSuffix" inheritance="1" priority="4">
                        <title>
                            <locale group="quiqqer/template-cologne"
                                    var="area.contentSuffix.title"
                            />
                        </title>
                        <description>
                            <locale group="quiqqer/template-cologne"
                                    var="area.contentSuffix.description"
                            />
                        </description>
                    </area>
                </layout>
            </layouts>
        </templateAreas>
    </bricks>
</quiqqer>
